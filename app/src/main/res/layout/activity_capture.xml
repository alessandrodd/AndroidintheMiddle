<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.uniroma2.giadd.aitm.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_module_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small">

            <TextView
                android:id="@+id/module_title"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_small"
                android:freezesText="true"
                tools:text="Module Title" />

            <TextView
                android:id="@+id/module_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/module_title"
                android:freezesText="true"
                tools:text="Module Message" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/save_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/module_message"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/module_title"
                android:text="@string/save_capture"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_console_output"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardview_module_info"
        android:layout_margin="@dimen/margin_small">

        <TextView
            android:id="@+id/console_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:freezesText="true"
            android:maxLines="9999"
            android:scrollbars="vertical"
            tools:text="Module Message" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
